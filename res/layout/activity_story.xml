<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/imageView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.elixirdose.interactivestory.ui.StoryActivity" >

    <ImageView
        android:id="@+id/storyImageView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:src="@drawable/page0" />

    <TextView
        android:id="@+id/storyTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/storyImageView"
        android:paddingBottom="15dp"
        android:paddingLeft="22dp"
        android:paddingRight="22dp"
        android:paddingTop="15dp"
        android:text="“Fokus, berani mengambil resiko, jangan mudah menyerah tetapi tahu kapan harus berhenti”

“Investor sekarang sudah tidak mencari unicorn lagi, tapi mencari cockroach!”

" />

    <Button
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="#fff"
        android:text="Stop and investigate"
        android:textColor="#ff0000ff" />

    <Button
        android:id="@+id/choice1Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button1"
        android:layout_alignParentLeft="true"
        android:background="#fff"
        android:text="Continue"
        android:textColor="#ff0000ff" />

</RelativeLayout>
